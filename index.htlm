<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lava Lamp Simulator</title>
    <link rel="icon" type="image/png" href="volcano.png">
    <style>
        body {
            background-color: black;
        }

        h1 {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: 0px;
            font-size: 80px;
            color: white;
            mix-blend-mode: soft-light;
            text-align: center;
        }

        #toggle-controls {
            margin: 0;
            color: #006aff;
            cursor: pointer;
            width: fit-content;
        }

        #control-panel {
            position: absolute;
            top: 0;
            left: 0;
            padding: 20px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 20px;
        }

        #controls {
            display: none;
            margin-top: 15px;
        }

        .control-row {
            display: flex;
            align-items: center;
        }

        .control-row label {
            padding-left: 5px;
        }
    </style>
</head>

<body>
    <div id="control-panel">
        <p id='toggle-controls' onclick="toggleControls()">Show controls</p>
        <div id="controls">
            <div class="control-row">
                <input type="range" id="num-blobs" name="num-blobs" min="2" max="50" value="10">
                <label for="num-blobs">Blobs</label>
            </div>
            <div class="control-row">
                <input type="range" id="min-blob-size" name="min-blob-size" min="5" max="30" value="10">
                <label for="min-blob-size">Min blob size</label>
            </div>
            <div class="control-row">
                <input type="range" id="max-blob-size" name="max-blob-size" min="30" max="60" value="45">
                <label for="max-blob-size">Max blob size</label>
            </div>
            <div class="control-row">
                <input type="range" id="blob-speed" name="blob-speed" min="1" max="5" value="3">
                <label for="blob-speed">Blob speed</label>
            </div>
            <div class="control-row">
                <input type="range" id="blob-stickiness" name="blob-stickiness" min="-1.0" max="1.5" value="0.5" step="0.05">
                <label for="blob-stickiness">Blob stickiness</label>
            </div>
            <div class="control-row">
                <input type="color" id="color1" name="color1" value="#ff0000">
                <label for="color1">Color 1</label>
            </div>
            <div class="control-row">
                <input type="color" id="color2" name="color2" value="#0000ff">
                <label for="color2">Color 2</label>
            </div>
        </div>
    </div>
    <canvas id="blob-canvas"></canvas>
    <h1>Lava Lamp</h1>
    <script>
        var showControls = false;
        document.documentElement.style.setProperty('--showControls', showControls ? 'block' : 'none');
        document.documentElement.style.setProperty('--bg', 'black');
        document.documentElement.style.setProperty('--color', 'white');

        function toggleControls() {
            showControls = !showControls;
            document.documentElement.style.setProperty('--showControls', showControls ? 'block' : 'none');
            document.getElementById('toggle-controls').innerHTML = showControls ? 'Hide controls' : 'Show controls';
        }
    </script>
    <script src="blobs.js"></script>
</body>

</html>
